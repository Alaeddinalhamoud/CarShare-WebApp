@model IEnumerable<CarShare.Data.Order>
@{
    ViewData["Title"] = "MyPendingOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Your History Payments</h2>
                    <br />
                    <span class="title-line"><i class="fa fa-credit-card fa-2x"></i></span>
                    <p>Paid Orders</p>
                    <table class="table" style="color:#ffd000;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Amount</th>
                                <th>Pay</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <span> @item.Id</span>
                                </td>

                                <td>
                                    <span>£ @item.TotalAmount</span>
                                </td>
                                <td>
                                    <a href="/Order/OrderDetails/@item.Id"><i style="color:darkgoldenrod" class="fa fa-paypal">aid</i></a>
                                </td>
                                <td>
                                    <a asp-action="OrderDetails" asp-controller="Order" asp-route-id="@item.Id"><i style="color:#ffd000" class="fa fa-info-circle fa-2x"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>





