@model CarShareV1.Models.EmailReceiptsBodyModelView
@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Order</h2>
                    <br />
                    <span class="title-line"><i class="fa fa-cart-plus fa-5x"></i></span>
                    <p>Order Details</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>


<section id="slider-area">
    <!--== slide Item One ==-->
    <div class="single-slide-item overlay">
        <div class="container">
            <div class="row book-a-car">

                <div class="col-lg-12">
                    <div class="choose-content-wrap">

                        <link href="~/css/OrderDetails.css" rel="stylesheet" />

                        <div class="invoice-box">
                            <table cellpadding="0" cellspacing="0">
                                <tr class="top">
                                    <td colspan="2">
                                        <table>
                                            <tr>
                                                <td class="title">
                                                    <img src="http://a-hamoud.com/uol/logo.png" width="280" height="100">
                                                </td>
                                                <td>
                                                    OrderNum #: @Model.OrderNum<br>
                                                    Created: @Model.Date
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr class="information">
                                    <td colspan="2">
                                        <table>
                                            <tr>
                                                <td>
                                                    Car Share<br>
                                                    14 Saxon Road<br>
                                                    Peterborough,PE15JT
                                                </td>

                                                <td>
                                                    @Model.CustomerName<br>
                                                    @Model.CustomerEmail
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>



                                <tr class="details">
                                    <td>
                                        PickUp Date: @Model.PickUpDate
                                    </td>

                                    @*   <td>
            DropOFF Date:@Model.DropOFFDate
        </td>
                                    *@
                                </tr>
                                <tr class="details">
                                    <td>
                                        PickUp Time: @Model.PickUpTime
                                    </td>

                                    <td>
                                        DropOFF Time:  @Model.DropOFFTime
                                    </td>
                                </tr>

                                <tr class="heading">
                                    <td>
                                        Vehicle
                                    </td>
                                    <td>
                                        Hours
                                    </td>

                                    <td>
                                        Price Per Hour
                                    </td>
                                </tr>

                                <tr class="item">
                                    <td>
                                        @Model.ServiceName
                                    </td>
                                    <td>
                                        @Model.Hours
                                    </td>

                                    <td>
                                        £ @Model.Total
                                    </td>
                                </tr>





                                <tr class="total">
                                    <td></td>
                                    <td></td>
                                    <td>
                                        Total:£ @Model.Total
                                    </td>
                                </tr>
                            </table>
                            <div>
                                <img src=@Model.MapImage />
                            </div>


                        </div>

                    </div>
                </div>

            </div>
        </div>

        </div>

</section>
