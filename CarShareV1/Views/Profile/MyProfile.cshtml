@model CarShare.Data.UserApplication
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="slider-area">
    <!--== slide Item One ==-->
    <div class="single-slide-item overlay">
        <div class="container">
            <div class="row">
               
                        <div class="col-lg-8">
                            <div class="book-a-car">
                                @if (!String.IsNullOrEmpty(ViewBag.Msg))
                                {
                                    <div class="alert alert-info alert-dismissible" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        @ViewBag.Msg
                                    </div>
                                }
                                <h5> <i class="fa fa-user"></i> Profile</h5>
                                <hr/>
                                <!-- Why Choose Tab Menu -->
                                <ul class="nav nav-pills">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">My Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Address/MyAddress">My Address</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/DrivingLicence/MyDrivingLicence">My Driving Licence</a>
                                    </li>                                   
                                </ul>
                                <!-- Why Choose Tab Menu -->
                                <hr />
                                <form asp-controller="Profile" asp-action="UpdateMyProfile" method="post">
                                    <label>First Name</label>
                                    <input asp-for="FirstName" />
                                    <label>Last Name</label>
                                    <input asp-for="LastName" />
                                    <label>Date of Birth</label>
                                    <input type="date" asp-for="DOB" />
                                    <label>UserName</label>
                                    <input asp-for="UserName" />
                                    <label>Phone Number</label>
                                    <input asp-for="PhoneNumber" placeholder="0044XXXXXXXXXX" />
                                    <label>Gender</label>
                                    <select asp-for="Gender" class="form-control">
                                        <option value="">No Status</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="NA">NA</option>
                                    </select>
                                    <br />
                                    <div class="book-button text-center">
                                        <button type="submit" class="book-now-btn">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

</section>

