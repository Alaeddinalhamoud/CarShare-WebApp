@model IEnumerable<CarShare.Data.Reservation>

@{
    ViewData["Title"] = "My Future Reservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>My UPCOMING Reservations</h2>
                    <br />
                    <span class="title-line"><i class="fa fa-credit-card fa-2x"></i></span>
                    <p>Reservations</p>
                    <table class="table table-responsive-lg" style="color:#ffd000;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PickUpDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PickUpTime)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.DropOffTime)
                                </th>

                                <th>Confirmed</th>
                                <th>Details</th>
                                <th>WalkMe</th>
                                <th>DriveMe</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>


                                    <td>
                                        @item.PickUpDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @item.PickUpTime:00
                                    </td>

                                    <td>
                                        @item.DropOffTime:00
                                    </td>

                                    <td>
                                        @{
                                            var value = item.IsConfirmed;
                                            if (value)
                                            {
                                                <i class="fa fa-check-circle fa-2x" style="color:#ffd000"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-times-circle fa-2x" style="color:#ffd000"></i>
                                            }
                                        }

                                    </td>
                                    <td>
                                        <a asp-action="ReservationDetails" asp-controller="Reservation" asp-route-id="@item.Id"><i style="color:#ffd000;" class="fa fa-info-circle fa-2x"></i></a>
                                    </td>
                                    <td>
                                         
                                        <a asp-action="WalkMe" asp-controller="Profile" asp-route-id="@item.Id"><i style="color:#ffd000;" class="fa fa-map-signs fa-2x"></i></a>
                                    </td>
                                    <td>
                                        <a href="/Profile/DriveMe/@item.Id">
                                            <img src="~/Image/CarShare/DriveMe.png" width="64" />
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>




